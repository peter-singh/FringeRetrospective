<p id="notice"><%= notice %></p>

<% @lists.each do |list| %>
<div>
  <div class="panel panel-primary home_card text-info" id=<%= list.id %>>
    <div class='panel-heading'>
      <h3 class="panel-title">
        <a href=<%= "/lists/#{list.id}"%>><%= list.name %></a>
      </h3>
    </div>

    <div class="container-fluid" id="home-card">
      <div class="row">
      <table>
        <tr>
          <td><%= link_to 'Edit', edit_list_path(list), :class => 'btn btn-sm btn-primary' %></td>
          <td><%= link_to 'Destroy', list, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-sm btn-danger' %></td>
        </tr>
      </table>
      </div>
    </div>

  </div>
  <% end %>

  <br>

  <%= link_to 'New List', new_list_path %>

