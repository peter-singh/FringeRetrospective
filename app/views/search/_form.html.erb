<div class="panel panel-primary home_card text-info">
	<div class="panel-heading">
		<h3 class="panel-title">
			Search 
		</h3>
	</div>

	<div class="panel-body">
		<dl class="dl-horizontal">
			<%= form_tag("/search/results", method: "get") do %>

			<%= label_tag(:title_string, "Title:") %>
			<%= text_field_tag(:title_string) %>	

			<%= label_tag(:artist, "Artist:") %>
			<%= text_field_tag(:artist) %>

			<%= label_tag(:year, "Year:") %>
			<%= select_tag(:year, raw("<option>2015</option><option>2016</option><option selected>2017</option>")) %>

			<%= label_tag(:festival_string, "Year:") %>
			<%= select_tag(:festival_string, raw("<option value="" selected>all</option><option>fringe</option><option selected>demofringe</option><option>jazz</option><option>book</option><option>international</option><option>tattoo</option><option>art</option><option>hogmanay</option><option>science</option><option>imaginate</option><option>film</option><option>mela</option><option>storytelling</option>")) %>

			<%= submit_tag("Search") %>

			<% end %>
		</dl>
	</div>
</div>

