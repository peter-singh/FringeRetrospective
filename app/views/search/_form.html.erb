<div class="panel panel-primary home_card text-info">
	<div class="panel-heading">
		<h3 class="panel-title">
			Search 
		</h3>
	</div>
<%= @search %>
	<div class="panel-body">
		<div class="row">

			<%= form_tag("/search/results", method: "get") do %>
			<div class="form-group">
				<div class="col-sm-6">
					<%= label_tag(:title_string, "Title:") %>
					<%= text_field_tag(:title_string, @search["title_string"], class: 'form-control') %>	

					<%= label_tag(:artist, "Artist:") %>
					<%= text_field_tag(:artist, @search["artist"], class: 'form-control') %>
				</div>

				<div class="col-sm-5">
					<%= label_tag(:year, "Year:") %>
					<%= select_tag "year", options_for_select(["2015", "2016", "2017"], @search["year"]), class: "form-control" %>

					<%= label_tag(:festival_string, "Festival:") %>
					<%= select_tag(:festival_string, raw("
					<option value="" selected>All Festivals</option>
					<option value='fringe'>Edinburgh Festival Fringe</option>
					<option value='demofringe' selected>Edinburgh Festival Fringe	(DEMO)</option>
					<option value='jazz'>Edinburgh Jazz & Blues Festival</option>
					<option value='book'>Edinburgh International Book Festival</option>
					<option value='international'>Edinburgh International Festival</option>
					<option value='tattoo'>Royal Edinburgh Military Tattoo</option>
					<option value='art'>Edinburgh Art Festival</option>
					<option value='hogmanay'>Edinburgh's Hogmanay</option>
					<option value='science'>Edinburgh International Science Festival</option>
					<option value='imaginate'>Edinburgh International Children's Festival</option>
					<option value='film'>Edinburgh International Film Festival	</option>
					<option value='mela'>Edinburgh Mela</option>
					<option value='storytelling'>Edinburgh International Storytelling Festival</option>
					"), class: "form-control") %>
				</div>
				<div class="col-sm-5">
					<br>
					<%= submit_tag("Search", class: "btn btn-primary") %>
				</div>
			</div>
			<% end %>
		</div>
	</div>
</div>
