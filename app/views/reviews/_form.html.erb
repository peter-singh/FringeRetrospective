<%= form_for @review, :html => { :class => "form-horizontal review" } do |f| %>

  <% if @review.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@review.errors.count, "error") %> prohibited this review from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @review.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :url, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :url, :class => 'form-control' %>
    </div>
    <%=f.error_span(:url) %>
  </div>
  <div class="form-group">
    <%= f.label :title, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :title, :class => 'form-control' %>
    </div>
    <%=f.error_span(:title) %>
  </div>
  <div class="form-group">
    <%= f.label :event_id, :class => 'control-label col-lg-2' %>
  <div class="col-lg-10">

  <% if @selected_event %>
  <%= f.select(:event_id, options_for_select(@events.collect{|e| [e.title, e.id]}, @selected_event.id ) ) %>
  <% else %>
  <%= f.select(:event_id, options_for_select(@events.collect{|e| [e.title, e.id]} ) ) %>
  <% end %>

    </div>
    <%=f.error_span(:event_id) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")), reviews_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
