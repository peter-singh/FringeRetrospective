<% @events.each do |event| %>

<div class="panel panel-primary home_card" id="<%= event.id %>" >
  <div class="panel-heading">
    <h3 class="panel-title"><%= event.title %></h3>
  </div>  
  <div class="panel-body">
    <text> <%= event.festival %> </text>
    <br>
    <text>Reviews:</text>
    <span> <%= event.reviews.count %> </span>
    <br>
    <text>Votes:</text>
    <span class="vote_tally" value="<%= event.id %>"> <%= event.tally_votes %> </span>
    <br>
    <div class="btn-group vote_buttons" role="group" aria-label="...">
      <% if user_signed_in? %>
        <!-- <a href="/votes">aasdas</a> -->
        <button type="button" class="btn btn-default thumbsup_button" value="<%= event.id %>" ><%= Emoji.find_by_alias("thumbsup").raw %></button>
        <button type="button" class="btn btn-default thumbsdown_button" value="<%= event.id %>" ><%= Emoji.find_by_alias("thumbsdown").raw %></button>
      <% else %>
        <a href="/users/sign_in"><button type="button" class="btn btn-default">Sign in to vote</button></a>
      <% end %>
    </div>

  </div>
</div>
  <!--  <%=  raw(event.description) %>
--> 
<% end %>

